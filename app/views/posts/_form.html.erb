  </div>

  <div class="pt-5 w-full">
    <%= form.label :summary, style: "width: 100%" %>
    <%= form.text_area :summary,style: "width: 50%" %>
  </div>



  <%= image_tag post.heroimage ,class: "w-50" if @post.heroimage.attached?  %>

  </div> 
    <%= form.label :heroimage, 'heroimage',class: "" %>
    <%= form.file_field :heroimage %>
  </div>



   <div class="pt-4">
    <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :full_name, {hide_label: true}, :class=> "m-auto" %>   
  </div>
 <div class="field">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>


