<% if user_signed_in? %>
  <div class="form-outline mb-2">
    <%= render partial: "users/user_profile_page", locals: {} %>
  </div>
<% else %>
<div class="col-lg-4 mx-auto pt-5 mt-5 rounded-lg border border-dark">

  <h2 class="mb-2">Log in</h2>
 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
    <div class="form-outline mb-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <%= f.label :email, class: "form-label" %>
    </div>

    <div class="form-outline mb-2">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      <%= f.label :password, class: "form-label" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <button type="submit" class="btn btn-primary btn-block mb-2">Log in</button>
    <% if flash.any? %>
    <div class="text-danger ">
    <% flash.each do |type, msg| %>
    <%= msg %>
    </div>
  <% end %>
  <% end %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
<% end %>
