<div class="col-lg-4 mx-auto pt-2 col-sm-8 col-8 mt-5 rounded-lg border border-dark">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control mb-2" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions",class:"btn btn-primary mt-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
